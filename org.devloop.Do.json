    "modules" : [
        {
            "name" : "todo",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "commit": "006108ad334cc704553dedfaee6e89d24bb3a887",
                    "url" : "https://github.com/edfloreshz/do.git"
