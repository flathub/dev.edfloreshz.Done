{
    "app-id" : "dev.edfloreshz.ToDo",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "todo",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : { "CARGO_HOME" : "/run/build/todo/cargo" }
    },
    "modules" : [
        {
            "name" : "todo",
            "builddir" : true,
            "buildsystem" : "simple",
            "build-commands" : [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -Dm755 ./target/release/todo -t /app/bin/",
                "install -Dm644 ./data/${FLATPAK_ID}.metainfo.xml -t /app/share/metainfo/",
                "install -Dm644 ./data/${FLATPAK_ID}.desktop -t /app/share/applications/",
                "install -Dm644 ./data/${FLATPAK_ID}.svg -t /app/share/icons/hicolor/scalable/apps/"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "commit" : "756317f3555bc01cf63abb6971b39fcd018efbae",
                    "url" : "https://github.com/edfloreshz/do.git"
                },
                "cargo-sources.json"
            ]
        }
    ]
}
